<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- The number of app thumbnails we keep in memory -->
    <integer name="config_recents_max_thumbnail_count">20</integer>

    <!-- The number of app icons we keep in memory -->
    <integer name="config_recents_max_icon_count">40</integer>

    <!-- Control whether status bar should distinguish HSPA data icon form UMTS
    data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- The number of columns in the QuickSettings -->
    <integer name="quick_settings_num_columns">4</integer>

    <!-- The maximum number of items to be displayed in quick settings -->
    <integer name="quick_settings_detail_max_item_count">8</integer>

    <!-- The maximum count of notifications on Keyguard. The rest will be collapsed in an overflow
     card. -->
    <integer name="keyguard_max_notification_count">6</integer>

</resources>

